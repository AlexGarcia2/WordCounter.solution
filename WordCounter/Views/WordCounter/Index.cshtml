@using WordCounter.Models;
@using System.Collections.Generic;
<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <title>Word Results</title>
  </head>
  <body>
    <h2>@Model.GetInputWord()</h2>
    <ul>
      @foreach(WordFinder word in Model)
      {
      <li>@word.RepeatCounter() </li>
      }
    </ul>



    <a href="/wordCounter/new">Add a comparison</a>
  </body>
</html>
